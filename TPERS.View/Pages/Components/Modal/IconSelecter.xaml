<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:icons="clr-namespace:TPERS.View.Services.Icons"
    x:Class="TPERS.View.Pages.Components.Modal.IconSelecter"
    BackgroundColor="#323232">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Título -->
        <Label 
            Text="Escolha um ícone"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="White"
            Margin="0,0,0,10"/>

        <!-- Grade de ícones -->
        <VerticalStackLayout Spacing="10">

            <!-- Linha 1 -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Padding="10" BackgroundColor="#282828" MinimumWidthRequest="60" MinimumHeightRequest="60"
                        FontFamily="FAS" TextColor="White" FontSize="28" CornerRadius="14"
                        Text="{x:Static icons:FASolid.Gears}" Clicked="SelectIcon"/>

                <Button Padding="10" BackgroundColor="#282828" MinimumWidthRequest="60" MinimumHeightRequest="60"
                        FontFamily="FAS" TextColor="White" FontSize="28" CornerRadius="14"
                        Text="{x:Static icons:FASolid.Brush}" Clicked="SelectIcon"/>

                <Button Padding="10" BackgroundColor="#282828" MinimumWidthRequest="60" MinimumHeightRequest="60"
                        FontFamily="FAS" TextColor="White" FontSize="28" CornerRadius="14"
                        Text="{x:Static icons:FASolid.Bolt}" Clicked="SelectIcon"/>

                <Button Padding="10" BackgroundColor="#282828" MinimumWidthRequest="60" MinimumHeightRequest="60"
                        FontFamily="FAS" TextColor="White" FontSize="28" CornerRadius="14"
                        Text="{x:Static icons:FASolid.CarBattery}" Clicked="SelectIcon"/>

                <Button Padding="10" BackgroundColor="#282828" MinimumWidthRequest="60" MinimumHeightRequest="60"
                        FontFamily="FAS" TextColor="White" FontSize="28" CornerRadius="14"
                        Text="{x:Static icons:FASolid.Lightbulb}" Clicked="SelectIcon"/>
            </HorizontalStackLayout>

            <!-- Linha 2 -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Padding="10" BackgroundColor="#282828" MinimumWidthRequest="60" MinimumHeightRequest="60"
                        FontFamily="FAS" TextColor="White" FontSize="28" CornerRadius="14"
                        Text="{x:Static icons:FASolid.Plug}" Clicked="SelectIcon"/>

                <Button Padding="10" BackgroundColor="#282828" MinimumWidthRequest="60" MinimumHeightRequest="60"
                        FontFamily="FAS" TextColor="White" FontSize="28" CornerRadius="14"
                        Text="{x:Static icons:FASolid.Desktop}" Clicked="SelectIcon"/>

                <Button Padding="10" BackgroundColor="#282828" MinimumWidthRequest="60" MinimumHeightRequest="60"
                        FontFamily="FAS" TextColor="White" FontSize="28" CornerRadius="14"
                        Text="{x:Static icons:FASolid.ScrewdriverWrench}" Clicked="SelectIcon"/>

                <Button Padding="10" BackgroundColor="#282828" MinimumWidthRequest="60" MinimumHeightRequest="60"
                        FontFamily="FAS" TextColor="White" FontSize="28" CornerRadius="14"
                        Text="{x:Static icons:FASolid.CarBurst}" Clicked="SelectIcon"/>

                <Button Padding="10" BackgroundColor="#282828" MinimumWidthRequest="60" MinimumHeightRequest="60"
                        FontFamily="FAS" TextColor="White" FontSize="28" CornerRadius="14"
                        Text="{x:Static icons:FASolid.Language}" Clicked="SelectIcon"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>

        <!-- Seletor de cores -->
        <HorizontalStackLayout Spacing="10" Margin="0,15,0,10" HorizontalOptions="Center">
            <Button Padding="10" BackgroundColor="Green" MinimumWidthRequest="60" MinimumHeightRequest="60"
                    CornerRadius="14" Clicked="SelectColor"/>

            <Button Padding="10" BackgroundColor="Yellow" MinimumWidthRequest="60" MinimumHeightRequest="60"
                    CornerRadius="14" Clicked="SelectColor"/>

            <Button Padding="10" BackgroundColor="Orange" MinimumWidthRequest="60" MinimumHeightRequest="60"
                    CornerRadius="14" Clicked="SelectColor"/>

            <Button Padding="10" BackgroundColor="Blue" MinimumWidthRequest="60" MinimumHeightRequest="60"
                    CornerRadius="14" Clicked="SelectColor"/>

            <Button Padding="10" BackgroundColor="Red" MinimumWidthRequest="60" MinimumHeightRequest="60"
                    CornerRadius="14" Clicked="SelectColor"/>
        </HorizontalStackLayout>

        <!-- Botão confirmar -->
        <Button 
            Text="Concluir"
            TextColor="White"
            FontAttributes="Bold"
            BackgroundColor="#4DA3FF"
            HeightRequest="45"
            CornerRadius="10"
            Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</toolkit:Popup>
