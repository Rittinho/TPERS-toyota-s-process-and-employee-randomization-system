<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TPERS.View.Pages.Components.Elements.HorizontalIconButton">

    <StackLayout>

        <Border x:Name="ButtonBorder"
             BackgroundColor="{Binding ButtonBackgroundColor}"
             HeightRequest="{Binding ButtonHeightRequest}"
             WidthRequest="{Binding ButtonWidthRequest}"
             StrokeThickness="0">

            <Grid x:Name="ButtonGrid">

                <Label x:Name="IconLabel"
                    Text="{Binding IconButton}"
                    FontFamily="FAS"
                    TextColor="{Binding ButtonTextColor}"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"/>

                <Label x:Name="TextLabel"
                    Text="{Binding TextButton}"
                    Grid.Column="1"
                    TextColor="{Binding ButtonTextColor}"
                    FontAttributes="Bold"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"/>

            </Grid>

        </Border>

    </StackLayout>

</ContentView>
